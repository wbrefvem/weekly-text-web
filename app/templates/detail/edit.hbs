<form action="" method="POST" style="padding: 20px 0px 0px">
    <div class="form-group">
        <label class="control-label">First Name</label>
        {{input class="form-control" value=model.first_name}}
    </div>
    <div class="form-group">
        <label class="control-label">Last Name</label>
        {{input class="form-control" value=model.last_name}}
    </div>
    <div class="form-group">
        <label class="control-label">Short Name</label>
        {{input class="form-control" value=model.short_name}}
    </div>
    <div class="form-group">
        <label class="control-label">Number</label>
        {{input class="form-control" value=model.number}}
    </div>
    <button {{action 'save'}} class="btn btn-success">Save</button>
    <button {{action 'cancel'}} class="btn btn-danger">Cancel</button>
</form>